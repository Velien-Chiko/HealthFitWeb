@model HealthFit.Models.ViewModels.ChangeAccountPasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<link rel="stylesheet" href="~/css/userprofile.css" />

<div class="userprofile-container">
    <h2 class="mb-4">Đổi mật khẩu</h2>
    <form asp-action="ChangePassword" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-3 position-relative">
            <label asp-for="CurrentPassword" class="form-label"></label>
            <input asp-for="CurrentPassword" class="form-control password-input" type="password" autocomplete="current-password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            <span class="toggle-password" onclick="togglePassword(this)"><i class="fa fa-eye"></i></span>
        </div>
        <div class="form-group mb-3 position-relative">
            <label asp-for="NewPassword" class="form-label"></label>
            <input asp-for="NewPassword" class="form-control password-input" type="password" autocomplete="new-password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
            <span class="toggle-password" onclick="togglePassword(this)"><i class="fa fa-eye"></i></span>
        </div>
        <div class="form-group mb-3 position-relative">
            <label asp-for="ConfirmNewPassword" class="form-label"></label>
            <input asp-for="ConfirmNewPassword" class="form-control password-input" type="password" autocomplete="new-password" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            <span class="toggle-password" onclick="togglePassword(this)"><i class="fa fa-eye"></i></span>
        </div>
        <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Hủy</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        function togglePassword(el) {
            var input = el.parentElement.querySelector('.password-input');
            if (input.type === 'password') {
                input.type = 'text';
                el.querySelector('i').classList.remove('fa-eye');
                el.querySelector('i').classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                el.querySelector('i').classList.remove('fa-eye-slash');
                el.querySelector('i').classList.add('fa-eye');
            }
        }
    </script>
    <style>
        .toggle-password {
            position: absolute;
            top: 38px;
            right: 16px;
            cursor: pointer;
            color: #888;
            z-index: 2;
        }
        .form-group.position-relative { position: relative; }
    </style>
} 