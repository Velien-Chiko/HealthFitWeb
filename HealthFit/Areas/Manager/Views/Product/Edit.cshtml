@model HealthFit.Models.ViewModels.ProductEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<partial name="_Notification" />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />

    <!-- Giá -->
    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label fw-bold">Giá sản phẩm</label>
        <input asp-for="Price" class="form-control"
               value="@(Model.Price % 1 == 0 ? ((int)Model.Price).ToString() : Model.Price.ToString("0.##"))" />
        <div class="form-text text-muted">💡 Đơn vị tính: <strong>nghìn đồng</strong></div>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Số lượng -->
    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label fw-bold">Số lượng</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Trạng thái -->
    <div class="form-group mb-3">
        <label asp-for="IsActive" class="form-label fw-bold">Trạng thái hiển thị</label>
        <select asp-for="IsActive" class="form-select">
            @if (Model.IsActive == "Pending")
            {
                <option value="Pending" selected>⏳ Đang chờ duyệt</option>
            }
            <option value="Approved">✅ Đã duyệt</option>
            <option value="Rejected">❌ Từ chối</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <!-- Ảnh hiện tại -->
    <div class="form-group mb-3">
        <label class="form-label fw-bold">Ảnh hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
        {
            <img src="@Model.CurrentImageUrl" alt="Ảnh sản phẩm" style="max-height: 150px;" class="rounded shadow" />
        }
        else
        {
            <p><i>Chưa có ảnh</i></p>
        }
    </div>

    <!-- Ảnh mới -->
    <div class="form-group mb-4">
        <label asp-for="NewImage" class="form-label fw-bold">Cập nhật ảnh mới</label>
        <input asp-for="NewImage" type="file" class="form-control" accept=".jpg,.jpeg,.png" onchange="previewImage(event)" />
        <span asp-validation-for="NewImage" class="text-danger"></span>

        <div class="mt-3" id="preview-container" style="display:none;">
            <p class="text-muted fst-italic mb-1">Ảnh bạn vừa chọn:</p>
            <img id="preview-image" style="max-height: 150px;" class="rounded shadow" />
        </div>

    </div>

    <!-- Nút hành động -->
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">💾 Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại danh sách</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")


    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('preview-image');
            const container = document.getElementById('preview-container');

            if (file && file.type.startsWith("image/")) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    container.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                container.style.display = 'none';
            }
        }
    </script>
}
