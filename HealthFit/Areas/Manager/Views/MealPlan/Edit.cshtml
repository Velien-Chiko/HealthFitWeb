@model HealthFit.Models.ViewModels.MealPlanEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa kế hoạch bữa ăn";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Chỉnh sửa kế hoạch bữa ăn</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="card shadow p-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MealPlanId" />
        <input type="hidden" asp-for="CurrentImageUrl" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Mô tả kế hoạch</label>
            <input type="text" class="form-control" value="@Model.PlanDescription"  />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label fw-semibold">Giá (VNĐ)</label>
            <input asp-for="Price" class="form-control"
                   value="@(Model.Price % 1 == 0 ? ((int)Model.Price).ToString() : Model.Price.ToString("0.##"))" />
            <div class="form-text text-muted">💡 Đơn vị tính: <strong>nghìn đồng</strong></div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="IsApproved" class="form-label fw-semibold">Trạng thái duyệt</label>
            <select asp-for="IsApproved" class="form-select">
                @if (Model.IsApproved == "Pending")
                {
                    <option value="Pending" selected>⏳ Đang chờ duyệt</option>
                }
                <option value="Approved">✅ Đã duyệt</option>
                <option value="Rejected">❌ Từ chối</option>
            </select>
            <span asp-validation-for="IsApproved" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Ảnh hiện tại</label><br />
            @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
            {
                <img src="@Model.CurrentImageUrl" alt="MealPlan Image" style="max-width: 200px; border-radius: 8px;" />
            }
            else
            {
                <p class="text-muted fst-italic">Chưa có ảnh</p>
            }
        </div>

        <div class="mb-3">
            <label asp-for="NewImage" class="form-label fw-semibold">Ảnh hiện tại</label>
            <input asp-for="NewImage" type="file" class="form-control" accept=".jpg,.jpeg,.png" onchange="previewImage(event)" />
            <span asp-validation-for="NewImage" class="text-danger"></span>

            <div class="mt-3" id="preview-container" style="display:none;">
                <p class="fst-italic text-muted mb-1">Ảnh vừa chọn:</p>
                <img id="preview-image" style="max-width: 200px; border-radius: 8px;" />
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('preview-image');
            const container = document.getElementById('preview-container');

            if (file && file.type.startsWith("image/")) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    container.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                container.style.display = 'none';
            }
        }
    </script>
}
