@model IPagedList<HealthFit.Models.Product>
@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Mvc.Core

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HealthFit - Product Management</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/styleofminh.css" rel="stylesheet" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar bg-light py-2 border-bottom">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-4">
                    <i class="bi bi-telephone"></i> +84 123 456 789
                </div>
                <div class="col-md-4">
                    <i class="bi bi-envelope"></i> healthfit@email.com
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container">
            <a class="navbar-brand" href="#">HealthFit</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                        <a asp-area="Nutri" asp-controller="CreateDish" asp-action="Create" class="nav-link btn btn-light text-success ms-2">
                            <i class="bi bi-plus-circle"></i> Thêm mới
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-wrap bg-light py-4">
        <div class="container">
            <div class="text-center">
                <p class="mb-1"><a href="#">Trang chủ</a> / Quản lý sản phẩm</p>
                <h1 class="mb-0">Quản lý sản phẩm</h1>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <section class="main-section py-5">
        <div class="container">
            <div class="row">
                <!-- Main Product List -->
                <div class="col-lg-8">
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["error"]</div>
                    }
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success">@TempData["success"]</div>
                    }

                    <!-- Nút tạo sản phẩm -->
                    <div class="mb-4 text-end">
                        <a asp-area="Nutri" asp-controller="CreateDish" asp-action="Create" class="btn btn-primary">
                            Tạo sản phẩm
                        </a>

                    </div>

                    <form method="get" class="input-group mb-4">
                        <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm sản phẩm..." value="@ViewData["CurrentFilter"]" />
                        <button type="submit" class="btn btn-success"><i class="bi bi-search"></i></button>
                    </form>
                    <div class="d-flex gap-2 mb-4">
                        <a asp-action="Index" asp-route-status="Approved" class="btn btn-outline-success ">
                            Sản phẩm hoạt động
                        </a>
                        <a asp-action="Index" asp-route-status="Pending" class="btn btn-outline-secondary">
                            Sản phẩm chờ duyệt
                        </a>
                        <a asp-action="Index" asp-route-status="Rejected" class="btn btn-outline-danger">
                            Sản phẩm bị hủy
                        </a>
                    </div>

                    @foreach (var item in Model)
                    {
                        var categories = item.ProductCategoryMappings?.Select(m => m.Category.CategoryName).ToList();
                        <div class="product-card mb-4 p-3 border rounded shadow-sm">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.Name" />
                                </div>
                                <div class="col-md-8">
                                    <h5>@item.Name</h5>
                                    @if (categories != null && categories.Count > 0)
                                    {
                                        <p class="mb-1 text-muted">
                                            <strong>Danh mục:</strong> @string.Join(", ", categories)
                                        </p>
                                    }

                                    <p><strong>Giá:</strong> @item.Price.ToString("N0") ₫</p>
                                    <p><strong>Đơn vị:</strong> @item.Quantity</p>
                                    <p><strong>Mô tả:</strong> @item.Description</p>
                                    <p>
                                        <strong>Trạng thái:</strong>
                                        @if (item.IsActive == "Approved")
                                        {
                                            <span class="badge bg-success">Đang hoạt động</span>
                                        }
                                        else if (item.IsActive == "Rejected")
                                        {
                                            <span class="badge bg-secondary">Ngừng hoạt động</span>
                                        }
                                        else if (item.IsActive == "Pending")
                                        {
                                            <span class="badge bg-secondary">Chờ duyệt</span>
                                        }
                                    </p>

                                    <div class="mt-2">
                                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.ProductId" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                    <div class="text-center mt-4">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewData["CurrentFilter"], status = ViewData["CurrentStatus"] }))
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="sidebar-box mb-4">
                        <h4>Danh mục</h4>
                        @{
                            var currentCategory = ViewData["CurrentCategory"]?.ToString();
                        }

                        <div class="d-grid gap-2">
                            <a asp-action="Index" asp-route-categoryId="1"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-status="@ViewData["CurrentStatus"]"
                               class="btn @(currentCategory == "1" ? "btn-primary" : "btn-outline-primary") d-flex justify-content-between align-items-center">
                                Món mặn <span class="badge bg-secondary"></span>
                            </a>

                            <a asp-action="Index" asp-route-categoryId="2"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-status="@ViewData["CurrentStatus"]"
                               class="btn @(currentCategory == "2" ? "btn-primary" : "btn-outline-primary") d-flex justify-content-between align-items-center">
                                Tráng miệng <span class="badge bg-secondary"></span>
                            </a>

                            <a asp-action="Index" asp-route-categoryId="3"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-status="@ViewData["CurrentStatus"]"
                               class="btn @(currentCategory == "3" ? "btn-primary" : "btn-outline-primary") d-flex justify-content-between align-items-center">
                                Đồ uống <span class="badge bg-secondary"></span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-3">
        <div class="container text-center">
            &copy; 2025 HealthFit. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
