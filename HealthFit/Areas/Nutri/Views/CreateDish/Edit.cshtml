@model HealthFit.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HealthFit - Chỉnh Sửa Sản Phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-green: #22c55e;
            --secondary-green: #16a34a;
            --light-green: #dcfce7;
            --dark-green: #15803d;
            --accent-green: #10b981;
            --text-dark: #1f2937;
            --text-light: #6b7280;
            --bg-light: #f8fafc;
            --white: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--light-green) 0%, var(--bg-light) 100%);
            min-height: 100vh;
            color: var(--text-dark);
        }

        .container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .form-container {
            background: var(--white);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(34, 197, 94, 0.1);
            overflow: hidden;
            border: 1px solid rgba(34, 197, 94, 0.1);
        }

        .form-header {
            background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
            color: var(--white);
            padding: 2.5rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .form-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.08)"/><circle cx="40" cy="70" r="1" fill="rgba(255,255,255,0.06)"/><circle cx="70" cy="80" r="2.5" fill="rgba(255,255,255,0.04)"/></svg>');
                pointer-events: none;
            }

            .form-header h2 {
                font-size: 2.2rem;
                font-weight: 700;
                margin-bottom: 0.5rem;
                position: relative;
                z-index: 1;
            }

            .form-header .subtitle {
                font-size: 1.1rem;
                opacity: 0.9;
                margin-bottom: 0;
                position: relative;
                z-index: 1;
            }

            .form-header i {
                font-size: 2.5rem;
                margin-bottom: 1rem;
                display: block;
                opacity: 0.9;
            }

        .form-body {
            padding: 2.5rem 2rem;
        }

        .form-section {
            margin-bottom: 2.5rem;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--secondary-green);
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid var(--light-green);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .mb-3 {
            margin-bottom: 1.5rem !important;
            position: relative;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            display: block;
            font-size: 0.95rem;
        }

        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: var(--white);
        }

            .form-control:focus {
                border-color: var(--primary-green);
                box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
                outline: none;
            }

            .form-control:hover {
                border-color: var(--accent-green);
            }

        .form-check {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem;
            background: var(--light-green);
            border-radius: 12px;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

            .form-check:hover {
                border-color: var(--primary-green);
            }

        .form-check-input {
            width: 1.2rem;
            height: 1.2rem;
            border: 2px solid var(--secondary-green);
            border-radius: 4px;
            background: var(--white);
            cursor: pointer;
        }

            .form-check-input:checked {
                background-color: var(--primary-green);
                border-color: var(--primary-green);
            }

        .form-check-label {
            font-weight: 500;
            color: var(--secondary-green);
            cursor: pointer;
            margin-bottom: 0;
        }

        .current-image-container {
            background: var(--bg-light);
            border: 2px solid var(--light-green);
            border-radius: 12px;
            padding: 1rem;
            text-align: center;
            margin-bottom: 1rem;
        }

            .current-image-container img {
                border-radius: 8px;
                box-shadow: 0 4px 12px rgba(34, 197, 94, 0.2);
                max-width: 100%;
                height: auto;
            }

        .no-image-text {
            color: var(--text-light);
            font-style: italic;
            padding: 2rem;
            background: var(--white);
            border: 2px dashed #d1d5db;
            border-radius: 8px;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
            color: var(--white);
            text-decoration: none;
            display: inline-block;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(34, 197, 94, 0.4);
                background: linear-gradient(135deg, var(--secondary-green), var(--dark-green));
                color: var(--white);
            }

        .btn-secondary {
            background: #6b7280;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            color: var(--white);
            text-decoration: none;
            display: inline-block;
        }

            .btn-secondary:hover {
                background: #4b5563;
                transform: translateY(-2px);
                color: var(--white);
            }

        .text-danger {
            color: #dc2626 !important;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e5e7eb;
        }

        .healthy-badge {
            display: inline-block;
            background: var(--light-green);
            color: var(--secondary-green);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 500;
            margin-left: 0.5rem;
        }

        .row {
            margin-left: -0.5rem;
            margin-right: -0.5rem;
        }

        .col-md-6 {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }


        {
            margin: 1rem auto;
            padding: 0 0.5rem;
        }

        .form-body {
            padding: 1.5rem 1rem;
        }

        .form-header {
            padding: 2rem 1rem;
        }

            .form-header h2 {
                font-size: 1.8rem;
            }

        .form-actions {
            flex-direction: column;
            align-items: center;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <i class="fas fa-edit"></i>
                <h2>Chỉnh Sửa Sản Phẩm</h2>
                <p class="subtitle">Cập nhật thông tin sản phẩm dinh dưỡng <span class="healthy-badge">Healthy Food</span></p>
            </div>

            <div class="form-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ProductId" />

                    <!-- Thông tin cơ bản -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-info-circle"></i>
                            Thông tin cơ bản
                        </h3>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Calo" class="form-label"></label>
                                    <input asp-for="Calo" class="form-control" />
                                    <span asp-validation-for="Calo" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>

                        <div class="form-group">
                            <label for="CategoryId">Danh mục</label>
                            <select class="form-control" name="CategoryId" asp-items="ViewBag.Categories">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                        </div>



                    </div>

                    <!-- Hình ảnh sản phẩm -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-image"></i>
                            Hình ảnh sản phẩm
                        </h3>

                        <div class="mb-3">
                            <label class="form-label">Hình ảnh hiện tại:</label>
                            <div class="current-image-container">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" width="120" height="80" alt="Product Image" />
                                }
                                else
                                {
                                    <span class="no-image-text">Chưa có hình ảnh</span>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="file" class="form-label">Thay đổi hình ảnh (tùy chọn):</label>
                            <input type="file" name="file" class="form-control" />
                        </div>
                    </div>

                    <!-- Nút hành động -->
                    <div class="form-actions">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Hiệu ứng focus cho form controls
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'translateY(-2px)';
                this.parentElement.style.transition = 'transform 0.3s ease';
            });

            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}