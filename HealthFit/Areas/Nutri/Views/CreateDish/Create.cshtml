@model HealthFit.Models.Product

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HealthFit - Tạo Sản Phẩm Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-green: #22c55e;
            --secondary-green: #16a34a;
            --light-green: #dcfce7;
            --dark-green: #15803d;
            --accent-green: #10b981;
            --text-dark: #1f2937;
            --text-light: #6b7280;
            --bg-light: #f8fafc;
            --white: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--light-green) 0%, var(--bg-light) 100%);
            min-height: 100vh;
            color: var(--text-dark);
        }

        .container-fluid {
            padding: 2rem 1rem;
        }

        .form-container {
            max-width: 900px;
            margin: 0 auto;
            background: var(--white);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(34, 197, 94, 0.1);
            overflow: hidden;
            border: 1px solid rgba(34, 197, 94, 0.1);
        }

        .form-header {
            background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
            color: var(--white);
            padding: 2.5rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .form-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(255,255,255,0.08)"/><circle cx="40" cy="70" r="1" fill="rgba(255,255,255,0.06)"/><circle cx="70" cy="80" r="2.5" fill="rgba(255,255,255,0.04)"/></svg>');
                pointer-events: none;
            }

            .form-header h2 {
                font-size: 2.2rem;
                font-weight: 700;
                margin-bottom: 0.5rem;
                position: relative;
                z-index: 1;
            }

            .form-header .subtitle {
                font-size: 1.1rem;
                opacity: 0.9;
                margin-bottom: 0;
                position: relative;
                z-index: 1;
            }

            .form-header i {
                font-size: 2.5rem;
                margin-bottom: 1rem;
                display: block;
                opacity: 0.9;
            }

        .form-body {
            padding: 2.5rem 2rem;
        }

        .form-section {
            margin-bottom: 2.5rem;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--secondary-green);
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid var(--light-green);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            display: block;
            font-size: 0.95rem;
        }

        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: var(--white);
        }

            .form-control:focus {
                border-color: var(--primary-green);
                box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
                outline: none;
            }

            .form-control:hover {
                border-color: var(--accent-green);
            }

        .input-group {
            position: relative;
        }

        .input-group-text {
            background: var(--light-green);
            border: 2px solid #e5e7eb;
            border-right: none;
            border-radius: 12px 0 0 12px;
            color: var(--secondary-green);
            font-weight: 500;
        }

        .input-group .form-control {
            border-left: none;
            border-radius: 0 12px 12px 0;
        }

        .input-group:focus-within .input-group-text {
            border-color: var(--primary-green);
            background: rgba(34, 197, 94, 0.1);
        }

        .file-upload-container {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .file-upload-label {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 180px;
            border: 3px dashed #d1d5db;
            border-radius: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: var(--bg-light);
            color: var(--text-light);
            font-size: 1rem;
            font-weight: 500;
        }

            .file-upload-label:hover {
                border-color: var(--primary-green);
                background: var(--light-green);
                color: var(--secondary-green);
            }

            .file-upload-label i {
                font-size: 2.5rem;
                margin-bottom: 0.5rem;
            }

            .file-upload-label.selected {
                border-color: var(--primary-green);
                background: var(--light-green);
                color: var(--secondary-green);
            }

        #imageUpload {
            display: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(34, 197, 94, 0.4);
                background: linear-gradient(135deg, var(--secondary-green), var(--dark-green));
            }

        .btn-secondary {
            background: #6b7280;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            color: var(--white);
        }

            .btn-secondary:hover {
                background: #4b5563;
                transform: translateY(-2px);
            }

        .validation-summary {
            background: #fee2e2;
            border: 1px solid #fca5a5;
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: #dc2626;
        }

        .text-danger {
            color: #dc2626 !important;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }


        {
            padding: 1rem 0.5rem;
        }

        .form-body {
            padding: 1.5rem 1rem;
        }

        .form-header {
            padding: 2rem 1rem;
        }

            .form-header h2 {
                font-size: 1.8rem;
            }

        }

        .row {
            margin-left: -0.5rem;
            margin-right: -0.5rem;
        }

        .col-md-6 {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .nutrition-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e5e7eb;
        }

        .healthy-badge {
            display: inline-block;
            background: var(--light-green);
            color: var(--secondary-green);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 500;
            margin-left: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="form-container">
            <div class="form-header">
                <i class="fas fa-seedling"></i>
                <h2>Tạo Sản Phẩm Mới</h2>
                <p class="subtitle">Thêm sản phẩm dinh dưỡng vào hệ thống HealthFit <span class="healthy-badge">Healthy Food</span></p>
            </div>

            <div class="form-body">
                <form method="post" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="validation-summary"></div>

                    <!-- Thông tin cơ bản -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-info-circle"></i>
                            Thông tin cơ bản
                        </h3>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Name">Tên sản phẩm</label>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Description">Mô tả sản phẩm</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết về sản phẩm..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                            
        <div class="mb-3 row p-1">
            <label asp-for="Calo" class="form-label"></label>
            <input asp-for="Calo" class="form-control" type="number" />
            <span asp-validation-for="Calo" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <label for="CategoryId">Danh mục</label>
                            <select class="form-control" name="CategoryId" asp-items="ViewBag.Categories">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                        </div>

                    </div>

              

                    <!-- Hình ảnh sản phẩm -->
                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-image"></i>
                            Hình ảnh sản phẩm
                        </h3>

                        <div class="file-upload-container">
                            <label for="imageUpload" class="file-upload-label">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <div>Chọn hình ảnh sản phẩm</div>
                                <small>Hỗ trợ: JPG, PNG, GIF (tối đa 5MB)</small>
                            </label>
                            <input name="file" type="file" id="imageUpload" accept="image/*" />

                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

        <div class="mb-3 form-check">
                    </div>

                    <!-- Nút hành động -->
                    <div class="form-actions">
                            <a asp-action="Index" asp-controller="CreateDish" asp-area="Nutri" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Tạo sản phẩm
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Xử lý upload hình ảnh
        document.getElementById('imageUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const label = document.querySelector('.file-upload-label');

            if (file) {
                label.innerHTML = `
                    <i class="fas fa-check-circle"></i>
                    <div>Đã chọn: ${file.name}</div>
                    <small>Nhấp để thay đổi hình ảnh</small>
                `;
                label.classList.add('selected');
            } else {
                label.innerHTML = `
                    <i class="fas fa-cloud-upload-alt"></i>
                    <div>Chọn hình ảnh sản phẩm</div>
                    <small>Hỗ trợ: JPG, PNG, GIF (tối đa 5MB)</small>
                `;
                label.classList.remove('selected');
            }
        });

        // Hiệu ứng focus cho form controls
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'translateY(-2px)';
                this.parentElement.style.transition = 'transform 0.3s ease';
            });

            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'translateY(0)';
            });
        });

        // Xử lý nút hủy
        document.querySelector('.btn-secondary').addEventListener('click', function() {
            if (confirm('Bạn có chắc chắn muốn hủy? Tất cả dữ liệu đã nhập sẽ bị mất.')) {
                // Redirect về trang danh sách hoặc clear form
                document.querySelector('form').reset();
                document.querySelector('.file-upload-label').classList.remove('selected');
            }
        });

        // Validation tự động
        document.querySelector('form').addEventListener('submit', function(e) {
            const requiredFields = document.querySelectorAll('[required]');
            let hasErrors = false;

            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.style.borderColor = '#dc2626';
                    hasErrors = true;
                } else {
                    field.style.borderColor = '#22c55e';
                }
            });

            if (hasErrors) {
                e.preventDefault();
                alert('Vui lòng điền đầy đủ thông tin bắt buộc.');
            }
        });
    </script>
</body>
</html>