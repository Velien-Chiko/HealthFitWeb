@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Nutri/Blog/Index">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Nutri" asp-controller="Profile" asp-action="Index">Thông tin cá nhân</a>
    </li>
    <li class="nav-item">
        <form asp-area="Store" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="Account" asp-action="Register">Đăng Ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
    </li>
}
</ul> 