@model HealthFit.Models.Blog

<form method="post">
    <input asp-for="BlogId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Blog</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" disabled/>
        </div>
         <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="4" disabled></textarea>
        </div>
        
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form> 