@model HealthFit.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
    @using HealthFit.Models.Constants
    // Kiểm tra xem sản phẩm đã được duyệt chưa để quyết định có cho phép sửa giá/số lượng không
    bool canEditPriceAndQuantity = Model.IsActive == ProductStatusConstants.Approved;
}

<div class="container mt-5">
    <!-- Thanh điều hướng cho Seller: giúp chuyển nhanh giữa các chức năng chính -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 rounded">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold">Seller Menu</span>
            <div class="navbar-nav">
                <!-- Link về Dashboard -->
                <a class="nav-link" asp-controller="Seller" asp-action="Dashboard">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <!-- Link cập nhật thông tin cá nhân -->
                <a class="nav-link" asp-controller="Seller" asp-action="EditProfile">
                    <i class="fas fa-user-edit"></i> Cập nhật thông tin
                </a>
                <!-- Link quản lý sản phẩm (đang active) -->
                <a class="nav-link active" asp-controller="Seller" asp-action="ProductList">
                    <i class="fas fa-box"></i> Quản lý sản phẩm
                </a>
                <!-- Link quản lý đơn hàng -->
                <a class="nav-link" asp-controller="Seller" asp-action="OrderList">
                    <i class="fas fa-shopping-cart"></i> Quản lý đơn hàng
                </a>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Chỉnh sửa sản phẩm
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Thông báo thành công/lỗi khi cập nhật sản phẩm -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <!-- Form chỉnh sửa sản phẩm -->
                    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                        <!-- Trường ẩn lưu ID sản phẩm và cờ xóa ảnh -->
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" name="removeImage" id="removeImage" value="false" />

                        <div class="row">
                            <div class="col-md-6">
                                <!-- Tên sản phẩm: bắt buộc nhập, có validate -->
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Giá sản phẩm: chỉ cho nhập từ 1000 trở lên, có thể bị khóa nếu chưa duyệt -->
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label fw-bold">Giá <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        @if (canEditPriceAndQuantity)
                                        {
                                            <input asp-for="Price" class="form-control" type="number" min="1000" placeholder="Nhập giá" />
                                        }
                                        else
                                        {
                                            <input asp-for="Price" class="form-control" type="number" min="1000" placeholder="Nhập giá" disabled="disabled" />
                                        }
                                        <span class="input-group-text">₫</span>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <!-- Số lượng sản phẩm: chỉ cho nhập >= 0, có thể bị khóa nếu chưa duyệt -->
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label fw-bold">Số lượng <span class="text-danger">*</span></label>
                                    @if (canEditPriceAndQuantity)
                                    {
                                        <input asp-for="Quantity" class="form-control" type="number" min="0" placeholder="Nhập số lượng" />
                                    }
                                    else
                                    {
                                        <input asp-for="Quantity" class="form-control" type="number" min="0" placeholder="Nhập số lượng" disabled="disabled" />
                                    }
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Danh mục sản phẩm: dropdown bị khóa, chỉ hiển thị danh mục hiện tại -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                                    <select class="form-control" name="CategoryId" required disabled>
                                        <option value="">-- Chọn danh mục --</option>
                                        @foreach (var cat in ViewBag.Categories)
                                        {
                                            var isSelected = (cat.CategoryId == ViewBag.CurrentCategoryId) ? "selected" : null;
                                            <option value="@cat.CategoryId" selected="@isSelected">@cat.CategoryName</option>
                                        }
                                    </select>
                                    <small class="text-muted">Chọn danh mục cho sản phẩm</small>
                                </div>
                            </div>
                        </div>

                        <!-- Mô tả sản phẩm: nhập text nhiều dòng -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Ảnh sản phẩm: nhập URL hoặc upload file mới, có xem trước ảnh -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Hình ảnh sản phẩm</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">URL hình ảnh</label>
                                    <input asp-for="ImageUrl" class="form-control" placeholder="Nhập URL hình ảnh" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Hoặc upload file ảnh</label>
                                    <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(this)" />
                                    <small class="text-muted">Chấp nhận: JPG, PNG, GIF (tối đa 5MB)</small>
                                    <div id="imagePreview" class="mt-2" style="display: none;">
                                        <img id="previewImg" style="max-width: 150px; max-height: 150px;" class="img-thumbnail" />
                                    </div>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-3">
                                    <label class="form-label">Hình ảnh hiện tại:</label>
                                    <div class="position-relative d-inline-block">
                                        <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                                        <div class="position-absolute top-0 end-0 m-1">
                                            <a href="@Model.ImageUrl" target="_blank" class="btn btn-sm btn-outline-info me-1">
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeImage()">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <small class="text-muted">Nhấn nút thùng rác để xóa ảnh hiện tại</small>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Cảnh báo nếu không được sửa giá/số lượng -->
                        @if (!canEditPriceAndQuantity)
                        {
                            <div class="alert alert-warning mt-2 p-2 small">Chỉ có thể chỉnh sửa giá và số lượng khi sản phẩm đã được duyệt (Approved).</div>
                        }

                        <!-- Nút lưu và quay lại -->
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Seller" asp-action="ProductList" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Hàm xóa ảnh hiện tại
        function removeImage() {
            if (confirm('Bạn có chắc chắn muốn xóa ảnh này?')) {
                document.getElementById('removeImage').value = 'true';
                // Ẩn ảnh hiện tại
                const imageContainer = document.querySelector('.position-relative.d-inline-block');
                if (imageContainer) {
                    imageContainer.style.display = 'none';
                }
                // Xóa URL trong input
                document.getElementById('ImageUrl').value = '';
            }
        }

        // Hàm xem trước ảnh khi upload
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const previewImg = document.getElementById('previewImg');

            if (input.files && input.files[0]) {
                const file = input.files[0];

                // Kiểm tra kích thước file (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File ảnh quá lớn. Kích thước tối đa là 5MB.');
                    input.value = '';
                    preview.style.display = 'none';
                    return;
                }

                // Kiểm tra loại file
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    alert('Chỉ chấp nhận file ảnh: JPG, PNG, GIF.');
                    input.value = '';
                    preview.style.display = 'none';
                    return;
                }

                const reader = new FileReader();

                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    preview.style.display = 'block';
                }

                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
} 